<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Order ID -->
        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order ID: N/A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Delivery Address -->
        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: N/A"
            android:textSize="16sp"
            android:paddingTop="8dp" />


        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: N/A"
            android:textSize="16sp"
            android:paddingTop="8dp" />


        <EditText
            android:id="@+id/edtOrderId"
            android:layout_width="match_parent"
            android:layout_height="48dp"
        android:hint="Enter Order ID"
        android:inputType="number"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="16dp" />


        <Button
            android:id="@+id/btnFetchOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fetch Order"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnUpdateStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Status"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
